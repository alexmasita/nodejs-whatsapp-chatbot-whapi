<!-- views/login.ejs -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login</title>
    <link rel="stylesheet" href="/build/styles.css" />
  </head>

  <body class="font-sans flex justify-center items-center h-screen bg-gray-200">
    <form
      action="/auth/login"
      method="post"
      class="max-w-md w-full p-6 shadow-md bg-white rounded-md"
    >
      <h2 class="text-center text-2xl text-gray-700 mb-4">
        Login with Phone Number
      </h2>
      <div class="flex mb-4">
        <select
          id="internationalCode"
          name="internationalCode"
          required
          class="w-1/3 p-2 border border-gray-300 rounded-l-md"
        >
          <option value="+254">+254 (Kenya)</option>
          <!-- Add more options as needed -->
        </select>
        <input
          type="tel"
          id="phoneNumber"
          name="phoneNumber"
          pattern="^07[0-9]{8}$"
          title="Enter a valid Kenyan phone number"
          required
          placeholder="07xxxxxxxx"
          class="w-2/3 p-2 border-t border-b border-r border-gray-300 rounded-r-md"
        />
      </div>
      <button
        type="submit"
        class="w-full p-2 bg-green-500 text-white rounded-md hover:bg-green-600"
      >
        Send Code
      </button>
    </form>
  </body>
</html>
