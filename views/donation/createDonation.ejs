<!-- views/donation/createDonation.ejs -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Create New Donation</title>
    <style>
      body {
        font-family: "Arial", sans-serif;
        background-color: #f5f5f5;
        text-align: center;
        padding: 20px;
      }

      h1 {
        color: #333;
      }

      form {
        margin-top: 20px;
        display: flex;
        flex-direction: column;
        align-items: center;
      }

      label {
        margin-top: 10px;
        display: block;
        font-weight: bold;
        width: 130px;
      }

      input,
      select {
        padding: 8px;
        margin-top: 5px;
        margin-bottom: 10px;
        width: 100%;
        box-sizing: border-box;
        flex: 1;
      }

      .input-group {
        display: flex;
        gap: 10px;
        max-width: 450px;
        width: 100%;
      }

      select#internationalCode {
        flex: 2;
      }

      input#phone_number {
        flex: 3;
      }

      input#amount {
        flex: 1;
      }

      button {
        background-color: #4caf50;
        color: #fff;
        padding: 10px 15px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        margin-top: 10px;
      }
    </style>
  </head>
  <body>
    <h1>Create New Donation</h1>

    <!-- Donation form goes here -->
    <form action="/donations/create/<%= group.id %>" method="post">
      <!-- Include user-related fields -->
      <div class="input-group">
        <label for="name">Name:</label>
        <input type="text" id="name" name="name" required />
      </div>

      <div class="input-group">
        <label for="international_code">Phone Number:</label>
        <select id="international_code" name="international_code" required>
          <!-- Add options for international code prefixes -->
          <!-- <option value="+1">+1 (United States)</option> -->
          <!-- <option value="+44">+44 (United Kingdom)</option> -->
          <option value="+254">+254 (Kenya)</option>
          <!-- Add more options as needed -->
        </select>
        <input
          type="tel"
          id="phone_number"
          name="phone_number"
          pattern="^07[0-9]{8}$"
          title="Enter a valid Kenyan phone number"
          placeholder="07xxxxxxxx"
          required
        />
      </div>

      <!-- Add your form fields including amount, donation_date, etc. -->
      <div class="input-group">
        <label for="amount">Amount:</label>
        <input type="text" id="amount" name="amount" required />
      </div>
      <!-- Add other form fields -->

      <button type="submit">Submit Donation</button>
    </form>

    <!-- Add your script tags and other content as needed -->
  </body>
</html>
