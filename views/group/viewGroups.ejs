<!-- views/group/viewGroups.ejs -->

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>View Groups</title>
    <style>
      body {
        font-family: "Arial", sans-serif;
        background-color: #f5f5f5;
        text-align: center;
        padding: 20px;
      }

      h1 {
        color: #333;
      }

      .group-card {
        border: 1px solid #ddd;
        border-radius: 8px;
        margin-bottom: 20px;
        padding: 10px;
        text-align: left;
        display: flex;
        justify-content: space-between;
      }

      .group-actions {
        display: flex;
      }

      .group-actions button {
        margin-left: 10px;
        padding: 5px 10px;
        cursor: pointer;
      }

      #createGroupButton {
        background-color: #4caf50;
        color: #fff;
        padding: 10px 15px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        margin-bottom: 20px;
      }

      /* Add this style to stack buttons at the bottom */
      .group-card {
        display: flex;
        flex-direction: column;
      }

      /* Style for action buttons */
      .action-button {
        margin-top: 10px; /* Adjust the spacing between buttons */
        padding: 5px 10px;
        cursor: pointer;
      }

      /* Add more styles as needed */
    </style>
  </head>
  <body>
    <h1>All Groups</h1>

    <!-- Button for creating a new group -->
    <button id="createGroupButton" onclick="createGroup()">
      Create New Group
    </button>

    <!-- Introduce log statements -->
    <% console.log("Groups variable:") %> <% console.log(groups) %>

    <!-- Display all groups in a card-like layout -->
    <% if (Array.isArray(groups) && groups.length > 0) { %> <%
    groups.forEach(group => { %>
    <div class="group-card">
      <div>
        <strong>Your Name:</strong> <%= group.your_name %><br />
        <strong>Your ID Number:</strong> <%= group.your_id_number %><br />
        <strong>Your Phone:</strong> <%= group.your_phone_number %><br />
        <strong>Recipient Phone:</strong> <%= group.recipient_phone_number %><br />
        <strong>Description:</strong> <%= group.description %><br />
        <strong>Chat ID:</strong> <%= group.chat_id %><br />
        <!-- Add more fields as needed -->
      </div>
      <div class="group-actions">
        <button class="action-button" onclick="editGroup('<%= group.id %>')">
          Edit
        </button>
        <button class="action-button" onclick="deleteGroup('<%= group.id %>')">
          Delete
        </button>
        <!-- Add the "View Donations" button -->
        <button
          class="action-button"
          onclick="viewDonations('<%= group.id %>')"
        >
          View Donations
        </button>
      </div>
    </div>
    <% }); %> <% } else { %>
    <p>No groups available.</p>
    <% } %>

    <script>
      function createGroup() {
        // Redirect to the create group route
        window.location.href = "/groups/create";
      }

      function editGroup(groupId) {
        // Redirect to the update route with the group ID
        window.location.href = `/groups/update/${groupId}`;
      }

      function deleteGroup(groupId) {
        // Redirect to the delete route with the group ID
        window.location.href = `/groups/delete/${groupId}`;
      }

      // Function to view donations for a specific group
      function viewDonations(groupId) {
        // Redirect to the view donations route with the group ID
        window.location.href = `/donations/view/${groupId}`;
      }
    </script>
  </body>
</html>
