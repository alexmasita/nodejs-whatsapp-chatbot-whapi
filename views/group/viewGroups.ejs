<!-- views/viewGroups.ejs -->

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>View Groups</title>
    <style>
      body {
        font-family: "Arial", sans-serif;
        background-color: #f5f5f5;
        text-align: center;
        padding: 20px;
      }

      h1 {
        color: #333;
      }

      .group-card {
        border: 1px solid #ddd;
        border-radius: 8px;
        margin-bottom: 20px;
        padding: 10px;
        text-align: left;
      }

      @media only screen and (min-width: 600px) {
        .group-card {
          display: flex;
          justify-content: space-between;
        }
      }
    </style>
  </head>
  <body>
    <h1>All Groups</h1>

    <!-- Introduce log statements -->
    <% console.log("Groups variable:") %> <% console.log(groups) %>

    <!-- Display all groups in a card-like layout -->
    <% if (Array.isArray(groups) && groups.length > 0) { %> <%
    groups.forEach(group => { %>
    <div class="group-card">
      <div>
        <strong>Your Name:</strong> <%= group.your_name %><br />
        <strong>Your Phone:</strong> <%= group.your_phone_number %><br />
        <strong>Recipient Phone:</strong> <%= group.recipient_phone_number %><br />
        <strong>Description:</strong> <%= group.description %><br />
        <strong>Chat ID:</strong> <%= group.chat_id %><br />
        <!-- Add more fields as needed -->
      </div>
    </div>
    <% }); %> <% } else { %>
    <p>No groups available.</p>
    <% } %>
  </body>
</html>
